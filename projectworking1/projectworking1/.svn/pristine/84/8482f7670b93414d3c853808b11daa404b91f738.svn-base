    std::cout << current_user->username<< std::endl;

    //build query
    std::string query = "SELECT username from users;";
    //run query
    dump = *(db->runQuery(query));

    //std::cout << dump.size() << std::endl;

    std::vector<std::string> userList = dump.at(0);

    return userList;
}

